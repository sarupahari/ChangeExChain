<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/current_price_background"
        android:layout_width="362dp"
        android:layout_height="91dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#cc99cc"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/current_price"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center"
        android:text="@string/price_placeholder"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/current_price_background"
        app:layout_constraintEnd_toEndOf="@+id/current_price_background"
        app:layout_constraintStart_toStartOf="@+id/current_price_background"
        app:layout_constraintTop_toTopOf="@+id/current_price_background"
        app:layout_constraintVertical_bias="0.451" />

    <TextView
        android:id="@+id/current_currency_code"
        android:layout_width="29dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:ems="10"
        android:gravity="center"
        android:text="@string/currency_code_placeholder"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/current_price_background"
        app:layout_constraintEnd_toEndOf="@+id/current_price_background"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/current_price"
        app:layout_constraintTop_toTopOf="@+id/current_price_background"
        app:layout_constraintVertical_bias="0.28" />

</android.support.constraint.ConstraintLayout>